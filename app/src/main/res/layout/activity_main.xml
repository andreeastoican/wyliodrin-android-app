<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.testmessage.MainActivity" >

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/graphContainer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#7DFDFE">
        <TextView
            android:id="@+id/text1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Add un item." />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/graphContainer2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/graphContainer"
        android:background="#FF7D7D">
        <TextView
            android:id="@+id/text2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Add un item." />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/graphContainer3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/graphContainer2"
        android:background="#7DFDFE">
        <TextView
            android:id="@+id/text3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Add un item." />
    </LinearLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/graphContainer3"
        xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/graphContainer4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/graphContainer3"
        android:background="#FF7D7D">
        <TextView
            android:id="@+id/text4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Add un item." />
    </LinearLayout>
    </ScrollView>

</RelativeLayout>
</ScrollView>